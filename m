 	clk_enable(pcdev->clk);
 
-	ceu_write(pcdev, CAPSR, 1 << 16); /* reset */
-	while (ceu_read(pcdev, CSTSR) & 1)
-		msleep(1);
-
 	pcdev->icd = icd;
+
+	ret = sh_mobile_ceu_soft_reset(pcdev);
 err:
 	return ret;
 }
